<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student.newsapp.Common.WebviewActivity"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar1"
        app:titleTextColor="#fff"
        android:background="#452727"
        android:title="AAA"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prof_section"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_centerHorizontal="true"
        android:id="@+id/prof_pic"
        app:civ_border_width="@dimen/_2sdp"
        app:civ_border_color="#bf0000"
        android:elevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_60sdp"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Display Here"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_7sdp"
            android:id="@+id/name"
            android:layout_below="@+id/prof_pic"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Display Here"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/email"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:gravity="center"/>

        <View
            android:layout_centerHorizontal="true"
            android:layout_width="370dp"
            android:layout_height="@dimen/_1sdp"
            android:background="#000"
            android:id="@+id/line"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_below="@+id/email"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:text="Your Bookmarks"
            android:layout_below="@+id/line"
            android:background="#76c3df"
            android:id="@+id/show"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:background="#76c3df"
            android:layout_below="@id/show"
            android:id="@+id/bn_logout"/>


    </RelativeLayout>


    <com.google.android.gms.common.SignInButton
        android:layout_below="@+id/prof_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/bn_login">

    </com.google.android.gms.common.SignInButton>
</LinearLayout>
